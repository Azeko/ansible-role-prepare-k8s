net.ipv4.ip_forward=1
net.ipv4.conf.all.rp_filter=0
net.ipv4.conf.default.rp_filter=0
# https://blog.cloudflare.com/syn-packet-handling-in-the-wild
net.ipv4.tcp_syncookies=1
# https://blog.cloudflare.com/syn-packet-handling-in-the-wild
net.core.somaxconn=16384
# https://blog.cloudflare.com/conntrack-tales-one-thousand-and-one-flows/
# https://docs.tigera.io/calico/latest/operations/troubleshoot/troubleshooting#linux-conntrack-table-is-out-of-space
net.netfilter.nf_conntrack_max=1000000

# TUNING TCP RETRIES
# values are set after reading these articles:
#  - https://blog.cloudflare.com/when-tcp-sockets-refuse-to-die/
net.ipv4.tcp_syn_retries=3
net.ipv4.tcp_synack_retries=3
net.ipv4.tcp_retries2=5

# TUNING TCP RECEIVE AND WRITE QUEUES
# values are set after reading these articles:
# - https://man7.org/linux/man-pages/man7/tcp.7.html
# - https://cromwell-intl.com/open-source/performance-tuning/tcp.html
# - https://blog.cloudflare.com/the-story-of-one-latency-spike/
# - https://blog.cloudflare.com/the-curious-case-of-slow-downloads/
net.core.wmem_max=16777216
net.core.wmem_default=1048576
net.core.rmem_max=16777216
net.core.rmem_default=1048576
net.ipv4.tcp_mem=262144 524288 524288
net.ipv4.tcp_rmem=4096 1048576 16777216
net.ipv4.tcp_wmem=4096 1048576 16777216

# https://man7.org/linux/man-pages/man7/tcp.7.html
net.ipv4.tcp_keepalive_intvl=1
net.ipv4.tcp_keepalive_probes=5
net.ipv4.tcp_keepalive_time=5

net.core.netdev_max_backlog=10000
net.ipv4.tcp_slow_start_after_idle=0

# https://kubernetes.io/docs/setup/production-environment/container-runtimes/#forwarding-ipv4-and-letting-iptables-see-bridged-traffic
net.bridge.bridge-nf-call-iptables=1
net.bridge.bridge-nf-call-ip6tables=1
